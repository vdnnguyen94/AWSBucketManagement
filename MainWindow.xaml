<Window x:Class="_301289600Van_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AWS S3 Menu by Van Nguyen" Height="500" Width="800" 
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <Button x:Name="BucketOperationsButton" Content="Bucket Level Operations" Margin="10" Padding="10" FontSize="16" Click="BucketOperationsButton_Click"/>
        <Button x:Name="ObjectOperationsButton" Content="Object Level Operations" Margin="10" Padding="10" FontSize="16" Click="ObjectOperationsButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="10" Padding="10" FontSize="16" Click="ExitButton_Click"/>
    </StackPanel>
</Window>